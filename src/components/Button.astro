---
interface Props {
    disabled?: boolean;
    error?: boolean;
    success?: boolean;
    class?: string;
    type?: "reset" | "submit" | "button";
}
const {
    disabled = false,
    error = false,
    success = false,
    type = "button",
    ...attrs
} = Astro.props;
---

<button
    class:list={[
        "bg-purple-600 text-white rounded-3xl py-2 px-4 transition-all hover:bg-purple-700 active:scale-90",
        attrs.class,
    ]}
    disabled={disabled}
    type={type}
>
    <slot />
</button>
