---
interface Props {
    id: string;
    name: string;
    type?: "email" | "text";
    label?: string;
    required?: boolean;
    placeholder?: string;
}

const { id, name, placeholder, required, type = "text", label } = Astro.props;
---

<div class="flex flex-col gap-3">
    <label class="text-white/70 text-sm" for={id}>
        {label}
    </label>

    <input
        id={id}
        required={required}
        name={name}
        placeholder={placeholder}
        class="w-full bg-transparent border-b border-white/30 focus:border-purple-600 focus:outline-none"
        type={type}
    />
</div>
